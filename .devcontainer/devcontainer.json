
{
    "name": "Ubuntu Workspace",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."

    },
    "customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"GitHub.vscode-pull-request-github",
				"JaehyunShim.vscode-ros2",
				"ms-vscode.cpptools",
				"ms-azuretools.vscode-docker"
			]
		}
	},

    "runArgs": [
        "--net=host",
        "--privileged"
    ]
}
